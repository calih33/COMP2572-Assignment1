<table>
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.user_type || "user" %></td>
                <td>
                    <% if (user.user_type === 'admin') { %>
                        <a href="/demote/<%= user.username %>">
                            <button type="button" class="btn btn-danger btn-sm">Demote</button>
                        </a>
                    <% } else { %>
                        <a href="/promote/<%= user.username %>">
                            <button type="button" class="btn btn-primary btn-sm">Promote</button>
                        </a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
